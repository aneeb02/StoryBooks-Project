<div class=" p-2 mt-2">
  <h1 class="font-bold text-3xl mb-4">Welcome {{name}}</h1>
  <p>Your Stories</p>
  {{#if stories }}
    <table class="min-w-max w-full table-auto">
        <thead>
          <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
            <th class="py-3 px-6 text-left">Title</th>
            <th class="py-3 px-6 text-left">Date</th>
            <th class="py-3 px-6 text-left">Status</th>
            <th class="py-3 px-6 text-left">Edit</th>
          </tr>
        </thead>
        <tbody class="text-gray-600 text-sm font-light">
          {{#each stories}}
            <tr class="border-b border-gray-200 hover:bg-gray-100">
              <td class="py-3 px-6 text-left whitespace-nowrap">
                <a href="/stories/{{id}}" class="text-blue-500 text-xl font-bold hover:underline">{{title}}</a>
              </td>
              <td class="py-3 px-6 text-left">
                {{formatDate createdAt 'DD MMMM YYYY'}}
              </td>
              <td class="py-3 px-6 text-left">
                <span class="py-1 px-3 rounded-full text-xs ">{{status}}</span>
              </td>
              <td class="flex gap-3">
                <a href="/stories/_id" class=""><i class="fas fa-edit"></i></a>
                <form action="/stories/{{_id}}" method="POST" id="delete">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="bg-red">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
  {{else}}
    <p>You have not created any stories as of yet.</p>

  {{/if}}
</div>
