<div class=" p-2 mt-2">
  <h1 class="font-bold text-3xl mb-4">Welcome {{name}}</h1>
  <p>Your Stories</p>
  {{#if stories}}
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each stories}}
          <tr>
            <td><a href="/stories/{{id}}"></a>{{title}}</td>
            <td>{{createdAt}}</td>
            <td><span>{{status}}</span></td>
            
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>You have not created any stories as of yet.</p>

  {{/if}}
</div>
