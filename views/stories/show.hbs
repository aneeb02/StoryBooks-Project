<div class="container mx-auto p-4">
    <div class="flex flex-wrap -mx-2">
      <div class="w-full md:w-2/3 px-2">
        <h3 class="text-2xl font-bold mb-4">
          {{story.title}}
          <small class="text-sm">
            {{{editIcon story.user user story._id false}}}
          </small>
        </h3>
        <div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
          <div class="p-4">
            <span class="block text-gray-600 mb-4">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
            <div class="text-gray-800">{{{story.body}}}</div>
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2">
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <div class="p-4 text-center">
            <span class="block text-xl font-bold mb-4">{{story.user.displayName}}</span>
            <img src="{{story.user.image}}" class="w-24 h-24 rounded-full mx-auto mb-4">
          </div>
          <div class="bg-gray-100 p-4 text-center">
            <a href="/stories/user/{{story.user._id}}" class="text-blue-500 hover:underline">More From {{story.user.firstName}}</a>
          </div>
        </div>
      </div>
    </div>
  </div>