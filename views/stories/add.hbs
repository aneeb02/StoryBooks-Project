<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Add a New Story</h1>
    <form id="storyForm" action="/stories" method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-md">
      <div class="mb-4">
        <label for="title" class="block text-gray-700 font-bold mb-2">Story Title</label>
        <input type="text" id="title" name="title" class="w-full p-2 border border-gray-300 rounded" required>
      </div>
      <div class="mb-4">
        <label for="body" class="block text-gray-700 font-bold mb-2">Story Content</label>
        <!-- Hidden input field for CKEditor content -->
        <input type="hidden" id="body" name="body" required>
        <div id="editor" class="w-full p-2 border border-gray-300 rounded"></div>
      </div>
      <div class="mb-4">
        <label for="status" class="block text-gray-700 font-bold mb-2">Status</label>
        <select id="status" name="status" class="w-full p-2 border border-gray-300 rounded">
          <option value="public">Public</option>
          <option value="private">Private</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="image" class="block text-gray-700 font-bold mb-2">Upload Image (optional)</label>
        <input type="file" id="image" name="image" class="w-full p-2 border border-gray-300 rounded">
      </div>
      <div class="flex flex-row justify-between items-center">
        <button type="submit" class="bg-blue-500 text-white p-2 rounded mt-3 hover:bg-blue-600">Save</button>
        <a href="/dashboard" class="bg-red-400 text-white p-2 rounded mt-3 hover:bg-red-500">Cancel</a>
      </div>
    </form>
  </div>