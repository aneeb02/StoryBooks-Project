<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">Add a New Story</h1>
    <form action="/stories" method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-md">
      <div class="mb-4">
        <label for="title" class="block text-gray-700 font-bold mb-2">Story Title</label>
        <input type="text" id="title" name="title" class="w-full p-2 border border-gray-300 rounded" required>
      </div>
      <div class="mb-4">
        <label for="body" class="block text-gray-700 font-bold mb-2">Story Content</label>
        <textarea id="body" name="body" rows="10" class="w-full p-2 border border-gray-300 rounded" required></textarea>
      </div>
      <div class="mb-3">
        <label for="status">Status:</label>
        <select name="status" id="status" class="bg-gray-200">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
        </select>
        
      </div>
      <button type="submit" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">
        <i class="fas fa-paper-plane"></i> Submit Story
      </button>
      <div>
        <input type="submit" value="Save" class="bg-blue-300 text-white p-2 rounded mt-3">
        <a href="/dashboard" class="bg-red-400 text-white p-2 rounded mt-3"> Cancel</a>
      </div>
    </form>
  </div>