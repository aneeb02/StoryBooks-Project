<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
    <h1 class="text-2xl font-bold mb-4">Login</h1>
    <form action="/login" method="POST">
      <div class="mb-4">
        <label class="block text-gray-700">Username</label>
        <input type="text" name="username" class="w-full p-2 border border-gray-300 rounded mt-1">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Password</label>
        <input type="password" name="password" class="w-full p-2 border border-gray-300 rounded mt-1">
      </div>
      <div class="border border-l-cyan-900"></div>
      <br>
      <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">Login</button>
      <div class="mt-4 items-center justify-center flex ">
        <a href="/auth/google" class="bg-red-400 text-white font-medium p-2 rounded w-full text-center">
          <i class="fab fa-google"></i> Log in with Google
        </a>
      </div>
      <div class="mt-4 items-center justify-center flex ">
        <a href="/auth/facebook" class="bg-blue-500 text-white font-medium p-2 rounded w-full text-center">
          <i class="fa-brands fa-facebook-f" style="color: white;"></i> Log in with Facebook
        </a>
      </div>
      </form>
  </div>
</div>
